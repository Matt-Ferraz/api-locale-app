{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es2022",
    "noImplicitAny": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "rootDirs": ["src"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
  },
  "include": ["src", "src/global.d.ts"],
  "exclude": ["node_modules"],
  "editorOptions": {
    "tabSize": 2
  }
}
